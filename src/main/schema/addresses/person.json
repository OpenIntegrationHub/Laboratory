{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "http://openintegrationhub.org/schemas/addresses/person",
	"title": "Person",
	"description": "Master Data Model for Addresses to use in the Open Integration Hub",
	"allOf": [
		{
			"$ref": "http://openintegrationhub.org/schemas/oih-data-record"
		}
	],
	"properties": {
		"title": { "type": "string" },
		"salutation": { "type": "string" },
		"firstName": { "type": "string" },
		"middleName": { "type": "string" },
		"lastName": { "type": "string" },
		"gender": { "type": "string" },
		"birthday": { "type": "date-time" },
		"categories": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/category"
			}
		},
		"addresses": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/address"
			},
		},
		"phoneNumbers": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/phone"
			},
		},
		"faxNumbers": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/fax"
			},
		},
		"eMailAddresses": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/eMail"
			},
		},
		"socials": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/social"
			},
		},
		"urls": {
			"type": "array",
			"items": {
				"$ref": "sharedDefinitions.json#sharedDefinitions/url"
			},
		}
	},
	"anyOf": [{
		"required": ["firstName"]
	},
	{
		"required": ["lastName"]
	}]
}
