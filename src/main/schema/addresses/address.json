{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://github.com/openintegrationhub/Data-and-Domain-Models/blob/master/src/main/schema/addresses/address.json",
  "title": "Organization",
  "type": "object",
  "allOf": [
    {
      "$ref": "../oih-data-record.json"
    }
  ],
  "properties": {
    "street": {
      "type": "string",
      "description": "Street of the address",
      "examples": [
        "Hohestr."
      ]
    },
    "streetNumber": {
      "type": "number",
      "description": "Street numer of the address",
      "examples": [
        "3"
      ]
    },
    "unit": {
      "type": "string",
      "description": "",
      "examples": [
        "a",
        "f"
      ]
    },
    "zipCode": {
      "type": "string",
      "description": "Zipcode/postalcode of the address",
      "examples": [
        "50667"
      ]
    },
    "city": {
      "type": "string",
      "description": "City of the address",
      "examples": [
        "Cologne"
      ]
    },
    "district": {
      "type": "string",
      "description": "District of the address",
      "examples": [
        "Alstadt-Sued"
      ]
    },
    "region": {
      "type": "string",
      "description": "Region of the address",
      "examples": [
        "NRW"
      ]
    },
    "country": {
      "type": "string",
      "description": "Country of the address",
      "examples": [
        "Germany"
      ]
    },
    "countryCode": {
      "type": "string",
      "description": "Countrycode of the address' country",
      "examples": [
        "DE"
      ]
    },
    "primaryContact": {
      "type": "string",
      "description": "Name of the primary contact of the address",
      "examples": [
        "Hermann Schmitz"
      ]
    },
    "label":{
      "type": "string",
      "description": "Can be used to label the address",
      "default": "primary",
      "examples": [
        "primary",
        "secondary"
      ]
    }
  }
}
